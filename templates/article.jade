
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ (page.title !== "Untitled" ? page.title : moment.utc(page.date).format('DD. MMMM YYYY')) + " - "}

block header
  include author
  h1= (page.title !== "Untitled" ? page.title : moment.utc(page.date).format('DD. MMMM YYYY'))
  p.author
    | #{ "Written by " }
    mixin author(page.metadata.author)
  if page.title !== "Untitled"
    p.date!= moment.utc(page.date).format('DD. MMMM YYYY')
  mixin tags(page)


block content
  article.article
    section.content!= typogr(page.html).typogrify()

